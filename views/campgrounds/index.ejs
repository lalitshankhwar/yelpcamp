<% layout('layout/boilerplate') %>

    <div id="cluster-map" class="mb-2"></div>
    <h1>All Campgrounds</h1>
    <div>
        <% for(let campground of campgrounds) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-lg-3 col-sm-12">
                        <% if(campground.images.length){ %>
                            <img crossorigin="anonymous" src="<%= campground.images[0].url %>" class="card-img-top"
                                alt="...">
                            <% }else{ %>
                                <img src="/images/default_thumbnail.png" class="img-fluid" alt="">
                                <% } %>
                    </div>
                    <div class="col-lg-9 col-sm-12">
                        <div class="card-body">
                            <h2 class="card-title">
                                <%= campground.title %>
                            </h2>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <p class="card-text text-muted">
                                <%= campground.location %>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View Campground</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN %>';
        const camps = `<%-JSON.stringify({features:campgrounds})%>`;
    </script>
    <script src="/js/clusterMap.js"></script>